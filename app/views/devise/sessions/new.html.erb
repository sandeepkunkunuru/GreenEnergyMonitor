<div  id="content">
    <h2>Login</h2>

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-horizontal'} ) do |f| %>

        <div class="control-group">
          <%= f.label :email, :class => 'control-label' %>
          <div class="controls">
            <%= f.email_field :email, :autofocus => true, :class => 'email_field'%>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :password, :class => 'control-label' %>
          <div class="controls">
            <%= f.password_field :password, :class => 'password_field'%>
          </div>
        </div>

      <% if devise_mapping.rememberable? -%>
            <div class="control-group">
              <%= f.label :remember_me, :class => 'control-label' %>
              <div class="controls">
                <%= f.check_box :remember_me, :class => 'check_box'%>
              </div>
            </div>
      <% end -%>

        <div class="form-actions">
            <div><%= f.submit 'Login', :class => 'btn btn-primary' %></div>
         </div>
    <% end %>

    <%= render "devise/shared/links" %>
</div>