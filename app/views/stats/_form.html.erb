<%= form_for @stat, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :timestamp, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :timestamp, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :average, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :average, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :maximum, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :maximum, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :minimum, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :minimum, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t('helpers.links.cancel')),
                stats_path, :class => 'btn' %>
  </div>
<% end %>
